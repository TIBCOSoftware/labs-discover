{
  "apiVersion": "sparkoperator.k8s.io/v1beta2",
  "kind": "SparkApplication",
  "metadata": {
    "name": "spark-pm",
    "namespace": "spark-operator"
  },
  "spec": {
    "type": "Scala",
    "mode": "cluster",
    "image": "tibcosoftware/labs-discover-spark-pm:3.0",
    "imagePullPolicy": "Always",
    "imagePullSecrets": [
      "regcred"
    ],
    "mainClass": "com.tibco.labs.main",
    "mainApplicationFile": "local:///opt/spark/jars/tibcosoftware-labs-discover-spark-pm.jar",
    "arguments": [
      "DIS_000014",
      "discover"
    ],
    "sparkVersion": "3.0.0",
    "sparkConf": {
      "spark.sql.windowExec.buffer.spill.threshold": "524288",
      "spark.sql.windowExec.buffer.in.memory.threshold": "524288",
      "spark.executor.heartbeatInterval": "60000",
      "spark.sql.adaptive.enabled": "true",
      "spark.serializer": "org.apache.spark.serializer.KryoSerializer"
    },
    "restartPolicy": {
      "type": "OnFailure",
      "onFailureRetries": 3,
      "onFailureRetryInterval": 10,
      "onSubmissionFailureRetries": 5,
      "onSubmissionFailureRetryInterval": 20
    },
    "volumes": [
      {
        "name": "persistent-storage",
        "persistentVolumeClaim": {
          "claimName": "efs-claim"
        }
      },
      {
        "name": "spark-local-dir-scratch",
        "hostPath": {
          "path": "/tmp",
          "type": "Directory"
        }
      }
    ],
    "driver": {
      "envFrom": [
        {
          "secretRef": {
            "name": "discodev-secret"
          }
        }
      ],
      "cores": 4,
      "memory": "4096m",
      "labels": {
        "version": "3.0.0"
      },
      "serviceAccount": "spark-operator-spark",
      "volumeMounts": [
        {
          "name": "persistent-storage",
          "mountPath": "/data"
        },
        {
          "name": "spark-local-dir-scratch",
          "mountPath": "/tmp"
        }
      ]
    },
    "executor": {
      "envFrom": [
        {
          "secretRef": {
            "name": "discodev-secret"
          }
        }
      ],
      "cores": 8,
      "instances": 2,
      "memory": "32768m",
      "labels": {
        "version": "3.0.0"
      },
      "volumeMounts": [
        {
          "name": "persistent-storage",
          "mountPath": "/data"
        },
        {
          "name": "spark-local-dir-scratch",
          "mountPath": "/tmp"
        }
      ]
    },
    "monitoring": {
      "exposeDriverMetrics": false,
      "exposeExecutorMetrics": false,
      "prometheus": {
        "jmxExporterJar": "/prometheus/jmx_prometheus_javaagent-0.11.0.jar",
        "port": 8090
      }
    }
  }
}